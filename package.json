{
  "name": "nice-nvr-electron",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "server": "ts-node backend/server.ts",
    "frontend": "npm --prefix ./frontend run dev",
    "electron": "wait-on tcp:5173 && npm run start",
    "dev": "concurrently \"npm run server\" \"npm run frontend\" \"npm run electron\"",
    "migrate": "ts-node backend/src/database/migrate.ts",
    "seed": "ts-node backend/src/database/seeders/seed.ts"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.1.2",
    "electron": "^36.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "ffmpeg-static": "^5.2.0",
    "jsonwebtoken": "^9.0.2",
    "node-onvif": "^0.1.7",
    "sqlite3": "^5.1.7",
    "ws": "^8.18.2"
  }
}
